@import '~common_styles/colors.styl'
@import '~common_styles/bg_image.styl'

.banner
    background-color: $linen
    bg-image('~pages/defaul/images/socks.png')
    background-repeat: no-repeat
    background-size: 130px 40px
    background-position: 0 0
    width: 130px
    height: 90px
    border-radius: 2px
    font-family: 'Univers LT Pro', sans-serif
    text-align: center

    .discount
        font-weight: 700
        color: $black
        margin: 0
        padding-top: 50px
        font-size: 12px // TODO: need use 16px

    .promo-code
        font-weight: 400
        color: $sandy-brown
        margin: 0
        font-size: 9px

.recently-viewed
    width: 70px
    height: 97px
    border-radius: 2px
    display: block
    margin-right: 18px
    background-size: @width @height
    background-position: 0 0
    background-repeat: no-repeat
    &:last-child
        margin-right: 0
    &:hover:before
        display: none
    &.recently-viewed-1
        bg-image('~pages/defaul/images/recently_viewed_1.png')
    &.recently-viewed-2
        bg-image('~pages/defaul/images/recently_viewed_2.png')
    &.recently-viewed-3
        bg-image('~pages/defaul/images/recently_viewed_3.png')
    &.recently-viewed-4
        bg-image('~pages/defaul/images/recently_viewed_4.png')
    &.recently-viewed-5
        bg-image('~pages/defaul/images/recently_viewed_5.png')
    &.recently-viewed-6
        bg-image('~pages/defaul/images/recently_viewed_6.png')

.for-you-list
    display: flex
    justify-content: space-between
