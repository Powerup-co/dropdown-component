@import '~common_styles/colors.styl'

$animation-name = 'fadeInUp'

.nav-bar-wrapper
    display: flex
    align-items: center
    justify-content: center
    // justify-content: space-between
    height: 80px
    background: $white
    position: relative

.nav-bar
    display: flex
    align-items: center

    > .nav-bar-link:first-child
        margin-left: 0

.sub-nav-bar
    position: absolute
    // top: 100%
    top: 110%
    left: 0
    width: 100%
    background: $white
    display: flex
    justify-content: center
    // display: none

    .sub-nav-bar-row
        display: flex
        padding: 30px 0 40px

    .sub-nav-bar-col
        display: flex
        flex-direction: column
        min-width: 100px
        :last-child .sub-nav-bar-link
            margin: 0

.nav-bar-link
    margin: 0 0 0 25px
    display: block
    &.sub-nav-bar-link
        display: inline-block
        margin: 0 0 15px
        p&
            pointer-events: none
