@import '../../screen_size.styl'

.recently-viewed
    > p
        font-family: 'Univers LT Pro', sans-serif
        font-weight: 700
        font-size: 12px
        margin-top: 0

    margin-bottom: 30px

    .recently-viewed-link-list
        display: flex

    .last-mobile-padding
        display: none

    @media(max-width: $screen-lg - 1px)
        margin-bottom: 0

        > p
            font-size: 24px
            margin: 20px 0 10px

        .recently-viewed-link-list
            overflow-x: auto
            overflow-y: hidden

        .last-mobile-padding
            display: block
            height: 1px
