@import '~common_styles/colors.styl'

.search-link
    font-family: 'Univers LT Pro', sans-serif
    font-weight: 700
    font-size: 14px
    text-overflow: ellipsis
    overflow: hidden
    white-space: nowrap
    &:link
    &:visited
    &:hover
    &:active
        color: $mine-shaft

.search-link-wrapper
    display: flex
    align-items: center
    &:not(&:last-child)
        margin-bottom: 18px

    .search-link-image
        width: 48px
        height: @width
        border-radius: 6px
        margin-right: 8px

    .search-result-info
        display: flex
        align-items: center
        .price
            font-family: 'Univers LT Pro', sans-serif
            font-weight: 400
            font-size: 14px
            margin: 0 5px 0 0
        .rating
            .active-star *
                fill: $tan-hide
            .not-active-star *
                fill: $alto

.all-results-link-wrapper
    display: flex
    align-items: center
    margin-top: 25px

    .icon
        margin-right: 6px
        margin-top: -3px
        min-width: 16px
        min-height: @min-width
        *
            stroke: $black
            stroke-width: 2px

    .all-results-link
        @extend .search-link
