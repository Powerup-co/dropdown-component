@import './bg_image.styl'

.recently-viewed
    min-width: 70px
    height: 97px
    border-radius: 2px
    display: block
    margin-right: 18px
    background-size: @width @height
    background-position: 0 0
    background-repeat: no-repeat
    &:last-child
        margin-right: 0
    &:hover:before
        display: none
    &.recently-viewed-1
        bg-image('./images/recently_viewed_1.png')
    &.recently-viewed-2
        bg-image('./images/recently_viewed_2.png')
    &.recently-viewed-3
        bg-image('./images/recently_viewed_3.png')
    &.recently-viewed-4
        bg-image('./images/recently_viewed_4.png')
    &.recently-viewed-5
        bg-image('./images/recently_viewed_5.png')
    &.recently-viewed-6
        bg-image('./images/recently_viewed_6.png')
